{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.vite/tsconfig.tsbuildinfo.json",
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "target": "ES2020",         // Or "ESNext" for the latest features
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // Or ["ESNext", "DOM", "DOM.Iterable"]
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // <--- IMPORTANT: For Vite, 'bundler' is often ideal
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // <--- IMPORTANT: For React JSX files

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

   
    "allowJs": true,           
    "esModuleInterop": true,   
   
  },
  "include": ["src"], // <--- IMPORTANT: Ensure your source directory is included
  "references": [{ "path": "./tsconfig.node.json" }]
}